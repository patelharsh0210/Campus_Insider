generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}
model User {
  id        String    @id @default(uuid())
  fullname  String
  password  String
  createdAt DateTime  @default(now())
  username  String    @unique
  email     String    @unique
  gender    Gender
  reviews   Review[] 
  posts     Post[]
  comments  Comment[]
  likes     Like[]
  profileUrl String?

  @@map("users")
}

model College {
  id          String   @id @default(uuid())
  name        String
  location    String
  type        String
  affiliation String? // Nullable for non-private colleges
  category    String // "degree_gtu", "degree_private", "diploma_gtu", "diploma_private"
  reviews     Review[]
  
}

enum Gender {
  male
  female
  other
}

model Review {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  imageUrl  String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  collegeId String
  college   College  @relation(fields: [collegeId], references: [id], onDelete: Cascade)
  isDeleted Boolean  @default(false)

  @@map("reviews")
}

model Post {
  id        String    @id @default(uuid())
  title     String
  content   String
  createdAt DateTime  @default(now())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes      Like[]  
  comments   Comment[]
  media     String?
  isDeleted Boolean   @default(false)
  numbersOfLikes Int  @default(0)


  @@map("posts")
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Like {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
 

  @@map("likes")
}

model Admin {
  
  id  String   @id @default(uuid())
  username String
  secret String

}